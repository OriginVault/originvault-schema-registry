{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.originvault.box/ContentSigningAssertionCredential",
  "title": "Content Signing Assertion Credential",
  "description": "Verifiable Credential containing cryptographic signing details for digital content.",
  "type": "object",
  "properties": {
    "id": { "type": "string", "description": "DID of the VC instance." },
    "issuer": { "type": "string", "description": "DID of the issuing entity (e.g., OriginVault)." },
    "issuedTo": { "type": "string", "description": "DID of the content owner." },
    "issuedAt": { "type": "string", "format": "date-time", "description": "Timestamp of issuance." },
    "data": {
      "type": "object",
      "properties": {
        "contentHash": { "type": "string", "title": "SHA-256 Content Hash", "description": "Cryptographic hash of the content." },
        "perceptualHash": { "type": "string", "title": "Perceptual Hash", "description": "Perceptual hash for similarity detection." },
        "uploadDate": { "type": "string", "title": "Upload Date", "format": "date-time" },
        "issuedBy": { "type": "string", "title": "Issued By", "description": "Entity that generated the signature (e.g., OriginVault)." }
      }
    },
    "proof": {
      "type": "object",
      "description": "Cryptographic proof for the credential.",
      "properties": {
        "type": { "type": "string", "description": "Proof type (e.g., JSON-LD Signature, EdDSA Signature, zk-SNARK Proof)." },
        "created": { "type": "string", "format": "date-time", "description": "Timestamp of proof creation." },
        "verificationMethod": { "type": "string", "description": "DID or method used to verify this proof." },
        "signatureValue": { "type": "string", "description": "Base64 or hex-encoded signature." }
      }
    }
  },
  "required": ["id", "issuer", "issuedTo", "issuedAt", "data", "proof"]
}
