{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://originvault.io/schemas/DIDAssertionCredential",
  "title": "DID Assertion Credential",
  "type": "object",
  "properties": {
    "@context": {
      "type": "array",
      "items": { "type": "string" },
      "default": [
        "https://www.w3.org/2018/credentials/v1",
        "https://w3id.org/security/v2"
      ]
    },
    "id": {
      "type": "string",
      "format": "uri",
      "description": "Unique identifier for this Verifiable Credential."
    },
    "type": {
      "type": "array",
      "items": { "type": "string" },
      "default": ["VerifiableCredential", "DIDAssertionCredential"]
    },
    "issuer": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "DID of the entity issuing the credential."
        }
      },
      "required": ["id"]
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the credential was issued."
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time",
      "description": "Optional expiration date for the credential."
    },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "The DID that this credential is asserting information about."
        },
        "assertionType": {
          "type": "string",
          "description": "The type of assertion this credential makes about the DID."
        },
        "assertionDetails": {
          "type": "object",
          "additionalProperties": true,
          "description": "Flexible metadata about the assertion, allowing any key-value pairs for extensibility."
        },
        "verificationSteps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "step": { "type": "string", "description": "The verification step performed." },
              "result": { "type": "string", "enum": ["Passed", "Failed"] },
              "timestamp": { "type": "string", "format": "date-time" }
            },
            "required": ["step", "result", "timestamp"]
          }
        }
      },
      "required": ["id", "assertionType"]
    },
    "proof": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "description": "Cryptographic proof type (e.g., Ed25519Signature2020)." },
        "created": { "type": "string", "format": "date-time", "description": "Timestamp when the proof was generated." },
        "proofPurpose": { "type": "string", "enum": ["assertionMethod"], "description": "Purpose of the proof." },
        "verificationMethod": { "type": "string", "format": "uri", "description": "DID URL of the key used to sign." },
        "proofValue": { "type": "string", "description": "Cryptographic signature proving the assertionâ€™s validity." }
      },
      "required": ["type", "created", "proofPurpose", "verificationMethod", "proofValue"]
    }
  },
  "required": ["@context", "type", "issuer", "issuanceDate", "credentialSubject", "proof"]
}