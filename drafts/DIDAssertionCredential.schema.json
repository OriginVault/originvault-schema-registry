{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DID Assertion Credential",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uri",
      "description": "The unique identifier for the credential."
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "The type of the credential, typically including 'VerifiableCredential'."
    },
    "issuer": {
      "type": "string",
      "format": "uri",
      "description": "The entity that issued the credential."
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time",
      "description": "The date and time the credential was issued."
    },
    "credentialSubject": {
      "$ref": "https://raw.githubusercontent.com/OriginVault/originvault-schema-registry/refs/heads/main/types/DIDAssertionCredentialSubject.schema.json",
      "description": "The subject of the credential."
    },
    "proof": {
      "type": "object",
      "description": "The proof used to verify the credential.",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of proof, e.g., 'Ed25519Signature2018'."
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the proof was created."
        },
        "proofPurpose": {
          "type": "string",
          "description": "The purpose of the proof, e.g., 'assertionMethod'."
        },
        "verificationMethod": {
          "type": "string",
          "format": "uri",
          "description": "The method used to verify the proof."
        },
        "jws": {
          "type": "string",
          "description": "The JSON Web Signature of the proof."
        }
      },
      "required": ["type", "created", "proofPurpose", "verificationMethod", "jws"]
    }
  },
  "required": ["id", "type", "issuer", "issuanceDate", "credentialSubject", "proof"]
}
