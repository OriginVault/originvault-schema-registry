{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/**/*.d.ts"],
  "exclude": ["node_modules", "drafts"]
}